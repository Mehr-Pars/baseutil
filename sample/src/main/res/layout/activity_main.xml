<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/showSimpleDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="show dialog" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/showBottomSheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_high"
            android:text="show bottom sheet" />

    </LinearLayout>

    <mehrpars.mobile.baseutil.views.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="@dimen/margin_high"
        android:background="#e1e1e1"
        app:civ_border_width="2dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:src="@tools:sample/avatars" />

    <mehrpars.mobile.baseutil.views.RoundedImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="#e1e1e1"
        app:civ_radius="18.0"
        app:srcCompat="@mipmap/ic_launcher"
        tools:src="@tools:sample/avatars" />

    <vgame.ir.view.component.round.RoundFrameLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:rv_backgroundColor="@color/colorRed"
        app:rv_cornerRadius="8dp"
        app:rv_cornerRadius_BR="32dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:src="@tools:sample/avatars" />

    <vgame.ir.view.component.round.RoundTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_high"
        android:padding="@dimen/margin_high"
        android:text="@string/app_name"
        android:textColor="@color/colorBlack"
        app:rv_backgroundColor="@color/colorPrimary"
        app:rv_cornerRadius="8dp" />

    <mehrpars.mobile.baseutil.views.TextViewCustom
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_high"
        android:clickable="false"
        android:hint="شماره تلفن"
        android:padding="@dimen/margin_high"
        android:text="02155886699"
        app:showHintAsTooltip="true" />

    <mehrpars.mobile.baseutil.views.EditTextCustom
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_high"
        android:clickable="false"
        android:hint="شماره همراه"
        android:padding="@dimen/margin_high"
        android:text="02155886699"
        app:showHintAsTooltip="true" />
</LinearLayout>
